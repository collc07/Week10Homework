{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Male vs Female Suicide Deaths by Age Group",
    "data": {
      "url": "https://raw.githubusercontent.com/collc07/Week10Homework/main/data/suicideagegroup_scatterclean.csv"
    },
    "params": [
      {
        "name": "Chosen_year",
        "value": 2011,
        "bind": {
          "input": "range",
          "min": 2011,
          "max": 2020,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.FemaleDeaths > 0"},
      {"filter": "datum.MaleDeaths > 0"},
      {"filter": "datum.Year == Chosen_year"}
    ],
    "encoding": {
      "x": {
        "field": "MaleDeaths",
        "type": "quantitative",
        "title": "Number of Male Deaths",
        "axis": {"tickCount": 6},
        "scale": {"type": "linear"}
      },
      "y": {
        "field": "FemaleDeaths",
        "type": "quantitative",
        "title": "Number of Female Deaths",
        "axis": {"tickCount": 6},
        "scale": {"type": "linear"}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
            "size": {
                "field": "TotalDeaths",
                "type": "quantitative",
                "scale": {
                  "type": "threshold",
                  "domain": [50, 100, 150, 200, 300],
                  "range": [100, 200, 300, 400, 500, 600]
                },
                "legend": {"format": ".1s"}
              },
          "color": {
            "field": "AgeGroup",
            "type": "nominal",
            "scale": {
              "domain": [
                "0-14",
                "15-19",
                "20-24",
                "25-29",
                "30-34",
                "35-39",
                "40-44",
                "45-49",
                "50-54",
                "55-59",
                "60-64",
                "65-69",
                "70-74",
                "75-79",
                "80-84",
                "85 and over"
              ],
              "range": [
                "#D98880",
                "#E74C3C",
                "#D7BDE2",
                "#8E44AD",
                "#85C1E9",
                "#1F618D",
                "#F7DC6F",
                "#D68910",
                "#F0B27A",
                "#D35400",
                "#95A5A6",
                "#4C33FF",
                "#339FFF",
                "#33F6FF",
                "#F033FF",
                "#FFC433",
                "#FF3361"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Age Group", "type": "nominal"},
            {"field": "Year", "type": "quantitative", "format": ","},
            {"field": "MaleDeaths", "type": "quantitative", "format": ","},
            {"field": "FemaleDeaths", "type": "quantitative", "format": ","}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "AgeGroup", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['AgeGroup'] == '0-14' || datum['AgeGroup'] == '40-44' || datum['AgeGroup'] == '20-24'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Age Group", "type": "nominal"},
            {"field": "Year", "type": "quantitative", "format": ","},
            {"field": "MaleDeaths", "type": "quantitative", "format": ","},
            {"field": "FemaleDeaths", "type": "quantitative", "format": ","}
          ]
        }
      }
    ]
  }